@model onlinefood.ViewModels.AdminVms.AdminProfileVm
@{
    ViewData["Title"] = "Admin Profile";
}

<div class="container mt-4">
    <h2>Admin Profile</h2>

    <div class="card shadow-sm p-4">
        <h4>Admin Info</h4>
        <hr />

        <div class="d-flex align-items-center gap-4">
            <img src="~/images/admin-avatar.png" alt="Admin" class="img-thumbnail rounded-circle shadow" style="width: 120px;" />
            <h5 class="mb-0">Name: @Model.Name</h5>
        </div>

        <div class="row mt-4">
            <div class="col-md-6">
                <p><strong>Email:</strong> @Model.Email</p>
                <p><strong>Role:</strong> @Model.Role</p>
            </div>
            <div class="col-md-6">
                <p><strong>Verified:</strong> @(Model.IsVerified ? "Yes" : "No")</p>
                <p><strong>Created At:</strong> @Model.CreatedAt.ToString("yyyy-MM-dd")</p>
            </div>
        </div>
    </div>
</div>
