@model onlinefood.Entity.Users

@{
    ViewData["Title"] = "Admin Profile";
}

<h2>@ViewData["Title"]</h2>

<div class="card shadow p-4">
    <h4>Admin Info</h4>
    <dl class="row">

        <dt class="col-sm-3">Profile Picture:</dt>
        <img src="~/images/admin-avatar.png" alt="Admin Profile" class="img-thumbnail" style="max-width: 200px;" />

        <dt class="col-sm-3">Name:</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Email:</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Role:</dt>
        <dd class="col-sm-9">@Model.Role</dd>

        <dt class="col-sm-3">Verified:</dt>
        <dd class="col-sm-9">@Model.IsVerified</dd>

        <dt class="col-sm-3">Created At:</dt>
        <dd class="col-sm-9">@Model.CreatedAt.ToString("yyyy-MM-dd")</dd>
    </dl>
</div>
