@model onlinefood.ViewModels.CartItemVms.CartVm
@{
    ViewData["Title"] = "Your Cart";
}

<h2>Your Cart</h2>

<div class="cart-container">
    <!-- Displaying Success or Error Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            @TempData["Success"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Error"]
        </div>
    }

    <!-- Cart Items List -->
    <table class="table">
        <thead>
            <tr>
                <th>Food Item</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CartItems)
            {
                <tr>
                    <td>@item.FoodName</td>
                    <td>
                        <div class="quantity-controls">
                            <!-- Minus Button -->
                            <form method="post" action="@Url.Action("UpdateQuantity", "Cart")" class="quantity-form">
                                <input type="hidden" name="foodItemId" value="@item.FoodItemId" />
                                <input type="hidden" name="quantity" value="@Math.Max(item.Quantity - 1, 1)" />
                                <button type="submit" class="btn btn-secondary">-</button>
                            </form>

                            <!-- Display Quantity -->
                            <span>@item.Quantity</span>

                            <!-- Plus Button -->
                            <form method="post" action="@Url.Action("UpdateQuantity", "Cart")" class="quantity-form">
                                <input type="hidden" name="foodItemId" value="@item.FoodItemId" />
                                <input type="hidden" name="quantity" value="@Math.Min(item.Quantity + 1, 100)" />
                                <button type="submit" class="btn btn-secondary">+</button>
                            </form>
                        </div>
                    </td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@(item.Price * item.Quantity)</td>
                    <td>
                        <form method="post" action="@Url.Action("RemoveFromCart", "Cart")">
                            <input type="hidden" name="foodItemId" value="@item.FoodItemId" />
                            <button type="submit" class="btn btn-danger">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Displaying Total Price -->
    <div class="total-price">
        <strong>Total Price: @Model.TotalPrice.ToString("C")</strong>
    </div>

    <!-- Clear Cart Button -->
    <form method="post" action="@Url.Action("ClearCart", "Cart")">
        <button type="submit" class="btn btn-warning">Clear Cart</button>
    </form>

    <!-- Place Order Button -->
    <form method="post" action="@Url.Action("PlaceOrder", "Cart")">
        <button type="submit" class="btn btn-success">Place Order</button>
    </form>
</div>

<style>
    .cart-container {
        margin-top: 20px;
    }
    .total-price {
        margin-top: 20px;
        font-size: 1.2em;
        font-weight: bold;
    }
    .table th, .table td {
        text-align: center;
    }
    .quantity-controls {
        display: flex;
        align-items: center;
        gap: 10px;
    }
    .quantity-controls button {
        width: 30px;
        height: 30px;
        padding: 0;
    }
    .quantity-controls span {
        font-size: 1.2em;
    }
</style>
