@model List<onlinefood.ViewModels.FoodItemVms.FoodItemVm>

@{
    ViewData["Title"] = "Category Menu";
}

<h2>Menu</h2>

@if (!Model.Any())
{
    <p>No food items in this category.</p>
}
else
{
    <div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" />
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p>@item.Description</p>
                    <p><strong>Price:</strong> @item.Price</p>
                    <a asp-action="Details" asp-route-id="@item.FoodItemId" class="btn btn-primary">Details</a>
                </div>
            </div>
        </div>
    }
    </div>
}
