@model List<onlinefood.ViewModels.FoodItemVms.FoodItemVm>

@{
    ViewData["Title"] = "Available Items";
}

<h2>Available Food Items</h2>

<div class="row">
@foreach (var item in Model)
{
    <div class="col-md-4 mb-4">
        <div class="card">
            <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" />
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <p>@item.Description</p>
                <p><strong>Price:</strong> @item.Price</p>
                <a asp-action="Details" asp-route-id="@item.FoodItemId" class="btn btn-primary">View</a>

                <!-- Add to Cart Button with Cart Icon -->
                <form method="post" action="@Url.Action("AddToCart", "Cart")">
                    <input type="hidden" name="foodItemId" value="@item.FoodItemId" />
                    <input type="hidden" name="quantity" value="1" />
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-shopping-cart"></i>
                    </button>
                </form>
            </div>
        </div>
    </div>
}
</div>

<!-- Font Awesome CDN for Cart Icon -->
@* Include this in your layout file if not already included *@
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
